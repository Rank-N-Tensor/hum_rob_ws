<robot name="four_dof">


    <link name="base_link">
    </link>

    <link name="body">
        <visual>
            <geometry>
                <mesh filename="package://four_dof/meshes/body_for_Sym.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <mesh filename="package://four_dof/meshes/body_for_Sym.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>

    </link>

    <!--left thigh-->
    <link name="left_front_thigh">
        <visual>
            <geometry>
                <mesh filename="package://four_dof/meshes/left_front_thigh_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>

        <collision>
            <geometry>
                <mesh filename="package://four_dof/meshes/left_front_thigh_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>


    <!--link name="right_front_thigh">
        <visual>
            <geometry>
                <mesh filename="package://four_dof/meshes/right_front_thigh_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </visual>
        <collision>
            <geometry>
                <mesh filename="package://four_dof/meshes/right_front_thigh_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link-->


    <joint name="base_to_body" type="fixed">
        <parent link="base_link"/>
        <child link="body"/>
        <origin xyz="0 0 0" rpy="1.57 0 0 "/>
    </joint>

    <joint name="body_to_left_thigh" type="revolute">
        <parent link="body"/>
        <child link="left_front_thigh"/>
        <origin xyz="0.035 0.0165 -0.05125" rpy="0 0 0"/>
        <axis xyz="0.0 0.0 1"/>
        <limit effort="1000.0" lower="-1.57" upper="1.57" velocity="0.5"/>
    </joint>
</robot>